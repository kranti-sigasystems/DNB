// prisma/models/Buyer.prisma
model Buyer {
  id                  String        @id @default(uuid())
  ownerId             String
  buyersCompanyName   String
  registrationNumber  String?       @unique
  taxId               String?
  contactName         String
  contactEmail        String
  countryCode         String
  contactPhone        String?
  country             String
  productName         String
  locationName        String
  state               String?
  city                String?
  address             String?
  postalCode          String?
  status              BuyerStatus   @default(active)
  isVerified          Boolean       @default(false)
  isDeleted           Boolean       @default(false)
  created_at          DateTime      @default(now())
  updated_at          DateTime      @updatedAt
  
  // Relations
  businessOwner BusinessOwner @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  offers        Offer[]
  
  @@map("buyers")
}

enum BuyerStatus {
  active
  inactive
}