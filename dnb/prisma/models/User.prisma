model User {
  // UUID with PostgreSQL gen_random_uuid() equivalent
  id             String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  
  // Name fields with length constraints
  first_name     String?   @db.VarChar(50) @map("first_name")
  last_name      String?   @db.VarChar(50) @map("last_name")
  
  // Email with TEXT type and unique constraint
  email          String    @unique @db.Text
  
  // Password with TEXT type
  password       String    @db.Text
  
  // Foreign key to Role
  roleId         Int
  role           Role      @relation(fields: [roleId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  
  // Business name with length constraint
  businessName   String?   @db.VarChar(100) @map("business_name")
  
  // Optional subscription reference
  subscriptionId Int?
  
  // Timestamps
  created_at     DateTime  @default(now()) @map("created_at")
  updated_at     DateTime  @updatedAt @map("updated_at")
  
  @@map("users")
  @@index([email], unique: true)
  
  // Note: Prisma doesn't support:
  // 1. Regex validation in schema (handle in app layer)
  // 2. Password length validation in schema (handle in app layer)
  // 3. Direct sequelize.literal for default values (use dbgenerated)
}